{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "Default": "Host=${DB_HOST:-localhost};Port=${DB_PORT:-5432};Database=${DB_NAME:-neomoto};Username=${DB_USER:-neomoto_user};Password=${DB_PASSWORD:-neomoto_pass123};Pooling=true;MinPoolSize=1;MaxPoolSize=20;CommandTimeout=30;"
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:8080"
      }
    }
  }
}
